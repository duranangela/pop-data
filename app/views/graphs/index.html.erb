<h2>Results</h2>

<%= @presenter.states %>

<div id='data'>
  <%  ['Colorado', 'New Mexico', 'California', 'Texas', 'Arizona'] %>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
<div class='graph'>
<canvas id="myChart"></canvas>
<script>

var labels = document.getElementById("data");
var ctx = document.getElementById("myChart");
var myChart = new Chart(ctx, {
type: 'bar',
data: {
    labels: labels,
    datasets: [{
        label: 'Total Population',
        data: [5607154, 2088070, 39536653, 28304596, 7016270],
        backgroundColor: 'red',
        borderColor: 'black',
        borderWidth: 1
    }]
},
options: {
    scales: {
        yAxes: [{
            ticks: {
                beginAtZero:true
            }
        }]
    }
}
});
</script>
</div>
